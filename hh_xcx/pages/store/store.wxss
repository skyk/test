/**index.wxss**/
.header{position:fixed;top:0;width: 100%;box-sizing: border-box;z-index: 999}
.store-page {box-sizing: border-box;-webkit-box-sizing:border-box;}
.store-page view{box-sizing: border-box; -webkit-box-sizing:border-box;}
.store-page text{box-sizing: border-box; -webkit-box-sizing:border-box;}


text{
    font-family: "Microsoft YaHei";
    letter-spacing: 1px;
}
input{
  font-family: "Microsoft YaHei";
    letter-spacing: 1px;
}
.navigationBarBorder{border-bottom:1rpx solid #b2b2b2;position:fixed;top:0;width: 100%;z-index: 999}
.search-wrap{position: relative;z-index: 2;width:100%;height:90rpx;overflow: hidden;border-bottom:1rpx solid #e5e5e5;background: #f5f5f5}
.location{float:left;font-size:24rpx;color:#666;text-align: center;line-height: 90rpx;width:137rpx}
.location image{width:22rpx;height:13rpx;margin-left: 7rpx;margin-bottom: 3rpx}

.search-btn{float:left;width:594rpx;height:58rpx;margin-top: 18rpx}
.search-btn image{width:594rpx;height:58rpx}




/**门店结果**/
.store_list{
  padding-top: 90rpx; 
  padding-left:30rpx;
  box-sizing: border-box;
  -webkit-box-sizing:border-box;
}
.store_area{
  display:-moz-box;
  display:-webkit-box;
  display:box;
  height:190rpx;
  padding:29rpx 0rpx;
  border-bottom:1px solid #e5e5e5;
}
.store_area:last-child{
  border-bottom:1px solid transparent;
}
.store_area .pic{
  height:132rpx;
  width:132rpx;
  margin-right:23rpx;
}
.store_area .pic image{
  width:100%;
  height:100%;
}

.store_area .word{
  width:420rpx;
  height:132rpx;
  -moz-box-flex:1;
  -webkit-box-flex:1;
  box-flex:1;
}
.store_area .word .name{
  padding:6rpx 0rpx 26rpx;
  font-size:30rpx;
  color:#000000;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  
}
.store_area .word .loc{
  font-size:26rpx;
  color:#666666;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}

.store_area .address{
  margin-left:10rpx;
  width:120rpx;
  padding-top:6rpx;
  font-size:24rpx;
  color:#666666;
}
.store_area .address image{
  width:21rpx;
  height:27rpx;
  margin-right:10rpx;
}

/*load_more_btn*/
.load_more_btn{
  width:100%;
  border:none;
  box-shadow:0rpx 0rpx 0rpx 0rpx rgba(0,0,0,0);
  -webkit-box-shadow:0rpx 0rpx 0rpx 0rpx rgba(0,0,0,0);
  border-radius:0rpx;
  -webkit-border-radius:0rpx;
  background-color:#f5f5f9;
  display:none;
  font-size:14px;
}