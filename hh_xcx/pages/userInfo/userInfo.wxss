page {
  background: #f5f5f5;
}

.userInfoBox {
  display: flex;
  flex-flow: column;
}

.headInfo {
  width: 100%;
  background: #fff;
  height: 400rpx;
  margin-top: 30rpx;
  text-align: center;
}

.headPic {
  
  
  
  margin-top: 80rpx;
  margin-bottom: 25rpx;
}
.userinfo-avatar{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.headInfo text {
  font-size: 24rpx;
  color: #bdcadb;
}

.phoneNum {
  width: 100%;
  height: 120rpx;
  background: #fff;
  margin: 30rpx 0 30rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 36rpx 0 36rpx;
}

.phoneNum text {
  font-size: 30rpx;
  color: #000;
  font-weight: bold;
}

.phoneNum view {
  font-size: 30rpx;
  color: #6c7b8a;
}

