/**map.wxss**/
page{height:100%}
.map-page {box-sizing: border-box;height:100%}
.map-page view{box-sizing: border-box;}
.map-page text{box-sizing: border-box;}
text{
    font-family: "Microsoft YaHei";
    letter-spacing: 1px;
}

.footer{
  position:fixed;
  width:100%;
  bottom:0rpx;
  left:0rpx;
  height:20%;
  padding:38rpx;
  border-top:1px solid #d8d8d8;
  background-color:#ffffff;
  overflow: hidden
}
.footer .word{
  float: left
}
.footer .word .name{
  display:block;
  padding:10rpx 0rpx 17rpx 0rpx;
  font-size:42rpx;
  color:#000;
  overflow:hidden;
   white-space:nowrap;
   text-overflow:ellipsis; 
}
.footer .word .address{
  display:block;
  padding-top:10rpx;
  font-size:26rpx;
  color:#888888;
  overflow:hidden;
   white-space:nowrap;
   text-overflow:ellipsis; 
}

.footer .icon{
  float:right;
  margin-top:20rpx; 
  width:100rpx;
  height:100rpx;
}
.footer .icon image{
  width:100%;
  height:100%;
}
