/**index.wxss**/
page{height:100%}
.fixed-section{height:80rpx;width: 100%;overflow: hidden;position: fixed;left: 0;top:0;background: #fff;z-index:999}
.fixed-section .location{float:left;margin-left: 26rpx;padding-left:10rpx;padding-right:10rpx;height:50rpx;margin-top: 15rpx}
.fixed-section .location text{display: inline-block;vertical-align: middle;color:#FF694B;font-size: 30rpx}
.fixed-section .location image{width: 18rpx;vertical-align: middle;margin-left: 10rpx}
.fixed-section .collection{float:right;width:45rpx;height:45rpx;margin-top:18.5rpx;margin-right:80rpx}
.fixed-section .collection image{width:45rpx}
.fixed-section .barcode{float:right;width:45rpx;height:45rpx;margin-top:17.5rpx;margin-right:36rpx}
.fixed-section .barcode image{width:45rpx}

.top-section{width:100%;height:150rpx;overflow:hidden;margin-top:80rpx}
.top-section navigator{float:left;width:90rpx;height:100rpx;text-align:center;margin:20rpx}
.top-section .l-collection{margin-left:195rpx}
.top-section .l-barcode{margin-left:180rpx}
.top-section navigator image{width:60rpx;display:block;margin:auto}
.top-section navigator text{width:100%;display:block;font-size:24rpx;line-height:30rpx;margin-top:15rpx}

swiper{width:100%;height:360rpx}
swiper .slide-image{width:100%}

.menu{width:100%;height:85rpx;line-height:85rpx;position: relative;color:#333;overflow:hidden;z-index: 2;background: #fff}
.slide-wrap{width: 120%;overflow:hidden;line-height:85rpx}
.menu text{float:left;height:80rpx;padding:0 10rpx;font-size:30rpx;margin-left: 23rpx;margin-right: 23rpx;color:#6C7B8A}
.menu text.active{color:#FF694B}
.menu-box{position:relative}
.menu-box .show-wrap{position:absolute;right:0;top:0;height:84rpx;width:82rpx;background:#fff;z-index: 2}
.menu-box .show{width:82rpx;height:45rpx;border-left:1rpx solid #ebecef;position: relative;right:0;top:21rpx;background: #fff}
.menu-box .show image{width:27rpx;height:17rpx;position:absolute;top:15rpx;left:27rpx}

.menu-box.fixed{position:fixed;top:80rpx;width:100%;z-index:999}
.coupons.fixed{margin-top:85rpx}

.coupons{width:100%;background:#f5f5f5;padding:28rpx}
.coupons .item{width:694rpx;height:276rpx;position:relative;margin-bottom:15rpx}
.coupons .item .bak{width:694rpx;position:absolute;left: 0;top:0}
.coupons .item .container{width:100%;position:relative;z-index:1;overflow:hidden}
.coupons .item .container .top{width:100%;padding-top:25rpx;padding-left:25rpx;overflow:hidden;height:200rpx;border-bottom:1rpx solid #E7E8E9}
.coupons .item .container .top view{float:left}
.coupons .item .container .top view.icon image{width:160rpx}
.coupons .item .container .top view.details{width:340rpx;padding-left:20rpx;}
.coupons .item .container .top view.details .prod-name{width:290rpx;font-size:30rpx;color:#000;font-weight:bold;margin-top:10rpx;line-height:40rpx;text-overflow: ellipsis;overflow: hidden;-webkit-line-clamp: 2;-webkit-box-orient: vertical;display: -webkit-box;height:74rpx}
.coupons .item .container .top view.details .prod-coupon{width:100%;margin-top:15rpx}
.coupons .item .container .top view.details .prod-coupon view{float:left}
.coupons .item .container .top view.details .prod-coupon view:nth-child(1){width:140rpx;}
.coupons .item .container .top view.details .prod-coupon view:nth-child(1) text:first-child{color:#FF694B;font-size:40rpx;font-weight:bold}
.coupons .item .container .top view.details .prod-coupon view:nth-child(1) text:last-child{color:#FF694B;font-size:24rpx}
.coupons .item .container .top view.details .prod-coupon view:nth-child(2){width:136rpx;font-size:24rpx;color:#BDCADB;margin-top:15rpx;margin-left:10rpx}
.coupons .item .container .top view.btn{width:160rpx;margin-top:30rpx}
.coupons .item .container .top view.btn image{width:160rpx;}
.coupons .item .container .top view.btn .text{font-size:30rpx;color:#6C7B8A;margin-left:40rpx;margin-top:35rpx}
.coupons .item .container .bottom{width:100%;height:76rpx;padding-left:25rpx}
.coupons .item .container .bottom view{float:left}
.coupons .item .container .bottom view.more,.coupons .item .container .bottom view.new{font-size:20rpx;color:#FF694B;border:1rpx solid #FF694B;border-radius:5rpx;padding:5rpx;margin-top:17rpx}
.coupons .item .container .bottom view.none{width:20rpx;height:20rpx;margin-top:12rpx}
.coupons .item .container .bottom view.none image{width:20rpx}
.coupons .item .container .bottom view.tip{font-size:24rpx;color:#6C7B8A;line-height:68rpx;margin-left:15rpx}

.no-coupons{width:100%;background:#f5f5f5;text-align:center;padding:100rpx}
.no-coupons image{width:300rpx}
.no-coupons .tips{margin-top:50rpx}
.no-coupons .tips text{font-size:30rpx;color:#6C7B8A;display:block;line-height:40rpx}
.no-more{width:100%;text-align:center;font-size:30rpx;background:#f5f5f5;padding-bottom:30rpx;color:#999}