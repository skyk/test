page{background:#f5f5f5}
.head{width:100%;height:140rpx;background:url('http://h5smg.miyapay.com/h5/hhxcx_img/image@2x.jpg');background-size:100%;overflow:hidden}
.head text{text-align:center;display:block;color:#fff}
.head text:first-child{font-size:24rpx;margin-top:30rpx}
.head text:last-child{font-size:30rpx;margin-top:20rpx}

.container{width:100%}
.container .item{width:100%;height:260rpx;border-bottom:1rpx solid #E7E8E9;padding-top:30rpx;background:#fff}
.container .item>view{float:left}
.container .item .item-left{width:226rpx;position:relative}
.container .item .item-right{width:524rpx}
.container .item .item-left image{width:160rpx;margin-left:36rpx}
.container .item .item-left .no-exc{position:absolute;width:120rpx;left:20rpx;top:20rpx}
.container .item .item-right .details{overflow:hidden;border-bottom:1rpx solid #E7E8E9}
.container .item .item-right .details>view{float:left}
.container .item .item-right .details .prod-wrap{width:300rpx;height:170rpx}
.container .item .item-right .details .prod-wrap .prod-name{font-size:30rpx;line-height:42rpx;color:#323C46}
.container .item .item-right .details .prod-wrap .points{color:#FF694B;margin-top:15rpx}
.container .item .item-right .details .prod-wrap .points text:first-child{font-size:40rpx;font-weight:bold}
.container .item .item-right .details .prod-wrap .points text:last-child{font-size:24rpx}
.container .item .item-right .details .to-use{width:140rpx;height:60rpx;text-align:center;color:#FF694B;line-height:60rpx;border-radius:30rpx;border:1rpx solid #FF694B;font-size:24rpx;margin-top:40rpx;margin-left:48rpx}
.container .item .item-right .details .to-exchange{width:140rpx;height:60rpx;text-align:center;color:#fff;line-height:60rpx;border-radius:30rpx;background:linear-gradient(to right,#fe6749,#fe997b);font-size:24rpx;margin-top:40rpx;margin-left:48rpx;box-shadow: 0 10rpx 20rpx rgba(0,0,0,.15)}
.container .item .item-right .details .not-enough{width:140rpx;height:60rpx;text-align:center;color:#fff;line-height:60rpx;border-radius:30rpx;background:#e7e8e9;font-size:24rpx;margin-top:40rpx;margin-left:48rpx;}
.container .item .item-right .details .no-exchange{width:140rpx;height:60rpx;text-align:center;color:#6C7B8A;line-height:60rpx;font-size:30rpx;margin-top:40rpx;margin-left:48rpx;}
.container .item .item-right .tips{font-size:24rpx;color:#6C7B8A;margin-top:15rpx}