/* pages/preHistory/preHistory.wxss */

.coupons {
  width: 100%;
  background: #f5f5f5;
  padding: 28rpx;
}

.coupons .item {
  width: 694rpx;
  height: 276rpx;
  position: relative;
  margin-bottom: 15rpx;
}

.coupons .item .bak {
  width: 694rpx;
  position: absolute;
  left: 0;
  top: 0;
}

.coupons .item .container {
  width: 100%;
  position: relative;
  z-index: 1;
  overflow: hidden;
}

.coupons .item .container .top {
  width: 100%;
  padding-top: 25rpx;
  padding-left: 25rpx;
  overflow: hidden;
  height: 200rpx;
  border-bottom: 1rpx solid #e7e8e9;
}

.coupons .item .container .top view {
  float: left;
}

.coupons .item .container .top view.icon image {
  width: 160rpx;
}

.coupons .item .container .top view.details {
  width: 340rpx;
  padding-left: 20rpx;
}

.coupons .item .container .top view.details .prod-name {
  width: 290rpx;
  font-size: 30rpx;
  color: #000;
  font-weight: bold;
  margin-top: 10rpx;
  line-height: 40rpx;
}

.coupons .item .container .top view.details .prod-coupon {
  width: 100%;
  margin-top: 15rpx;
}

.coupons .item .container .top view.details .prod-coupon view {
  float: left;
}

.coupons .item .container .top view.details .prod-coupon view:nth-child(1) {
  width: 140rpx;
}

.coupons .item .container .top view.details .prod-coupon view:nth-child(1) text:first-child {
  color: #ff694b;
  font-size: 40rpx;
  font-weight: bold;
}

.coupons .item .container .top view.details .prod-coupon view:nth-child(1) text:last-child {
  color: #ff694b;
  font-size: 24rpx;
}

.coupons .item .container .top view.details .prod-coupon view:nth-child(2) {
  width: 136rpx;
  font-size: 24rpx;
  color: #bdcadb;
  margin-top: 15rpx;
  margin-left: 10rpx;
}

.coupons .item .container .top view.btn {
  width: 160rpx;
  margin-top: 30rpx;
  font-size: 30rpx;
color: #6C7B8A;
text-align: center;
line-height: 100rpx;
}

/* .coupons .item .container .top view.btn image {
  width: 160rpx;
} */

.coupons .item .container .bottom {
  width: 100%;
  height: 76rpx;
  padding-left: 25rpx;
}

.coupons .item .container .bottom view {
  float: left;
}

.coupons .item .container .bottom view:first-child {
  font-size: 20rpx;
  color: #ff694b;
  border: 1rpx solid #ff694b;
  border-radius: 5rpx;
  padding: 5rpx;
  margin-top: 17rpx;
}

.coupons .item .container .bottom view:last-child {
  font-size: 24rpx;
  color: #6c7b8a;
  line-height: 68rpx;
  margin-left: 15rpx;
}
